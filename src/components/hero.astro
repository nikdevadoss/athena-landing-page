---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import ConnectionIcon from "@assets/connection-icon.astro";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";

import P5Sketch from '@components/P5Sketch.jsx';
// import ZDogIllustration from '@components/ZdogIllustration.jsx';
import ZdogIllustration from "@components/ZdogIllustration.jsx";
import RotatingLogo from "@components/RotatingLogo.jsx";


// import Logo from '../components/Logo.astro';  // Assuming you have a Logo component
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block relative">
  <!-- <P5Sketch client:load></P5Sketch> -->
  <!-- <ZdogIllustration client:load /> -->
  <RotatingLogo client:load />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Data Analytics Made Simple
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Connect to your data warehouses and lakes and start asking questions in plain english
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://athena-two-mu.vercel.app/"
        target="_blank"
        class="flex gap-3 items-center justify-center"
        rel="noopener">
        <ConnectionIcon class="w-5 h-5"></ConnectionIcon>
         Get Started with Athena
      </Link>
    </div>
  </div>
</main>
